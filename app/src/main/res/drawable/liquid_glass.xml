<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp sáng nhẹ như ánh phản chiếu -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Lớp trắng trong mờ mô phỏng kính -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/> <!-- độ mờ nhẹ -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Viền sáng ngoài cùng -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#80FFFFFF"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>