<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- background tối khi được chọn -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- giữ border -->
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- nền trắng mặc định -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- border đen -->
        </shape>
    </item>
</selector>

