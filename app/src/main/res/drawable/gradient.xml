<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00FFE699"
                android:centerX="0.1"
                android:centerY="0.1"
                android:endColor="#00FFFFFF"
                android:gradientRadius="150%"
                android:startColor="#FFE699"
                android:type="radial" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00AEEFFF"
                android:centerX="0.9"
                android:centerY="0.1"
                android:endColor="#00FFFFFF"
                android:gradientRadius="150%"
                android:startColor="#AEEFFF"
                android:type="radial" />
        </shape>
    </item>

</layer-list>

