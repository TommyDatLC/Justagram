<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toàn bộ giao diện gốc của bạn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_text_bold"
                    android:text="Manage"
                    android:textColor="@android:color/black"
                    android:textSize="28sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Search"
                    android:src="@drawable/magnifying_glass_icon" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Notifications"
                    android:src="@drawable/bell_mobile_icon" />

                <ImageView
                    android:id="@+id/avatar_logo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/avatar_circle_mask"
                    android:clipToOutline="true"
                    android:contentDescription="Avatar"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/avatar_logo" />
            </LinearLayout>

            <!-- Tab Bar -->
            <LinearLayout
                android:id="@+id/tab_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/tab_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:fontFamily="@font/sf_text_bold"
                    android:gravity="center"
                    android:text="Post"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tab_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:fontFamily="@font/sf_text_bold"
                    android:gravity="center"
                    android:text="Comment"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sort Bar -->
            <LinearLayout
                android:id="@+id/sort_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_sort_bar"
                    android:drawableEnd="@drawable/down_arrow_icon"
                    android:drawablePadding="6dp"
                    android:drawableTint="#9E9E9E"
                    android:fontFamily="@font/sf_text_bold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Sort by"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_sort_bar"
                    android:drawableEnd="@drawable/down_arrow_icon"
                    android:drawablePadding="6dp"
                    android:drawableTint="#9E9E9E"
                    android:fontFamily="@font/sf_text_bold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Privacy"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_sort_bar"
                    android:drawableEnd="@drawable/down_arrow_icon"
                    android:drawablePadding="6dp"
                    android:drawableTint="#9E9E9E"
                    android:fontFamily="@font/sf_text_bold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Video views"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Scrollable Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/content_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- === Post Block 1 === -->
                    <include
                        android:id="@+id/post_item_1"
                        layout="@layout/item_post" />

                    <!-- === Post Block 2 === -->
                    <include
                        android:id="@+id/post_item_2"
                        layout="@layout/item_post" />

                    <!-- === Post Block 3 === -->
                    <include
                        android:id="@+id/post_item_3"
                        layout="@layout/item_post" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <!-- 🔹 Overlay mờ + hiệu ứng phóng to -->
    <FrameLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#B3000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/enlarged_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0"
            android:background="@drawable/bg_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:scaleX="0.9"
            android:scaleY="0.9">

            <include layout="@layout/item_post" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
