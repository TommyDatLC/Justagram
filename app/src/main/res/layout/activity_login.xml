    <ImageView
        android:id="@+id/justagram"
        android:layout_width="300dp"
        android:layout_height="160dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@mipmap/justagram_logo"
        android:transitionName="app_logo" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/justagram"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:alpha="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_loginWInstagram"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/instagram_main"
            app:cardCornerRadius="40px"
            app:cardElevation="9dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/instagram_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_text_bold"
                    android:paddingBottom="4dp"
                    android:text="Continue with Instagram"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E7E7E7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="OR"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E7E7E7" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/edtUsernameContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"

            app:cardBackgroundColor="@color/element_gray"
            app:cardCornerRadius="40px"
            app:cardElevation="9dp">

            <EditText
                android:id="@+id/txtbox_accessToken"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@null"
                android:fontFamily="@font/sf_pro_rounded_thin"
                android:hint="Token"
                android:padding="12dp"
                android:textColor="@color/hint_text"
                android:textColorHint="@color/hint_gray"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/edtPasswordContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"

            app:cardBackgroundColor="@color/element_gray"
            app:cardCornerRadius="40px"
            app:cardElevation="9dp">
            <!--            <EditText-->
            <!--                android:id="@+id/edtPassword"-->
            <!--                android:layout_width="300dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:textColorHint="@color/hint_gray"-->
            <!--                android:textColor="@color/hint_text"-->
            <!--                android:textSize="14dp"-->
            <!--                android:paddingStart="12dp"-->
            <!--                android:hint="User ID"-->
            <!--                android:fontFamily="@font/sf_pro_rounded_thin"-->
            <!--                android:drawableEnd="@drawable/eye_vision_view_icon"-->
            <!--                android:drawableTint="@color/hint_gray"-->
            <!--                android:inputType="textPassword"-->
            <!--                android:background="@null"-->

            <!--         />-->

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_text_bold"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="end"
            android:text="Forgot password?"

            android:textColor="#1877F2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_Login"
            android:layout_width="300dp"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"

            app:cardBackgroundColor="@color/facebook_blue"
            app:cardCornerRadius="40px"
            app:cardElevation="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_text_bold"
                    android:text="Log in"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"

                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_text_bold"
                android:text="Don't have an account?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sf_text_bold"
                android:foreground="?attr/selectableItemBackground"
                android:text=" Sign up"
                android:textColor="#1877F2"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>