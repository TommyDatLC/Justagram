<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Credentials -->
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Instagram Settings" android:textSize="16sp"
                    android:fontFamily="@font/sf_text_bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <EditText android:id="@+id/etIgId" android:hint="IG User ID" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <EditText android:id="@+id/etAccessToken" android:hint="Access Token" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <EditText android:id="@+id/etServerUrl" android:hint="Upload server URL (e.g. https://abcd.ngrok.io)" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Media selection + preview -->
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Media (max 10 ảnh)" android:textSize="16sp" android:fontFamily="@font/sf_text_bold" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <Button android:id="@+id/btnPickMedia" android:text="Chọn ảnh (tối đa 10)" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPreview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"/>
                <EditText android:id="@+id/etCaption" android:hint="Caption (tùy chọn)" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Actions -->
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/btnUploadAndPost" android:text="Upload ảnh lên server vs Đăng ngay" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_text_bold"/>
                <Button android:id="@+id/btnSchedule" android:text="Hẹn giờ đăng (ví dụ +60s)" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <Button android:id="@+id/btnPostStory" android:text="Đăng Story (upload + publish)" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/sf_pro_rounded_thin"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scheduled list -->
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Bài đang được hẹn giờ" android:fontFamily="@font/sf_text_bold" android:textSize="16sp"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvScheduled" android:layout_marginTop="8dp"
                    android:layout_width="match_parent" android:layout_height="200dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
