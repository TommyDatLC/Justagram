<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F7"
    android:padding="12dp"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Content below header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Reel tab -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:backgroundTint="@android:color/white"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_text_bold"
                        android:text="Reel Creator"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnPickMedia_reel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_rounded_thin"
                        android:text="Pick images (max 10)" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPreview_reel"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp" />

                    <EditText
                        android:id="@+id/etCaption_reel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_rounded_thin"
                        android:hint="Caption (optional)" />

                    <Button
                        android:id="@+id/btnPublishNow_reel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_text_bold"
                        android:text="Publish Reel Now" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Post tab -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:backgroundTint="@android:color/white"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_text_bold"
                        android:text="Post Creator"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnPickMedia_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_rounded_thin"
                        android:text="Pick images (max 10)" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPreview_post"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp" />

                    <EditText
                        android:id="@+id/etCaption_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_rounded_thin"
                        android:hint="Caption (optional)" />

                    <Button
                        android:id="@+id/btnPublishNow_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_text_bold"
                        android:text="Publish Post Now" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
