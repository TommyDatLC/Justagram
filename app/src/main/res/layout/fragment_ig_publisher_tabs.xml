<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#F2F5F7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#FF5722"
            app:tabSelectedTextColor="#000"
            app:tabTextColor="#666"
            android:background="@android:color/transparent"/>

        <!-- Reel tab -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReel"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:text="Reel Creator" android:fontFamily="@font/sf_text_bold" android:textSize="16sp"  android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnPickMedia_reel" android:text="Pick images (max 10)" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPreview_reel" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="120dp"/>
                <EditText  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/etCaption_reel" android:hint="Caption (optional)" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnPublishNow_reel" android:text="Publish Reel Now" android:layout_marginTop="8dp" android:fontFamily="@font/sf_text_bold"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnSchedule_reel" android:text="Schedule Reel" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Post tab -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPost"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Post Creator" android:fontFamily="@font/sf_text_bold" android:textSize="16sp"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnPickMedia_post" android:text="Pick images (max 10)" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPreview_post" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="120dp"/>
                <EditText  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/etCaption_post" android:hint="Caption (optional)" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnPublishNow_post" android:text="Publish Post Now" android:layout_marginTop="8dp" android:fontFamily="@font/sf_text_bold"/>
                <Button  android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnSchedule_post" android:text="Schedule Post" android:layout_marginTop="8dp" android:fontFamily="@font/sf_pro_rounded_thin"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scheduled list -->
        <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white">
            <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scheduled Jobs" android:fontFamily="@font/sf_text_bold" android:textSize="16sp"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvScheduled" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="200dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
